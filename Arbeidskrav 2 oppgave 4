# Oppgave 4 a: Oversikt over land med hovedstad og antall innbyggere.
data = {"Norge":["Oslo", 0.634],
       "England": ["London", 8.982],
       "Frankrike": ["Paris", 2.161],
       "Italia": ["Roma", 2.873]}

#Oppgave 4 b: Utgir informasjon om et gitt land brukeren ønsker
land = input("Hvilket land ønsker du informasjon om (Norge,England,Frankrike eller Italia):")

info = data.get(land)


if info:   
     print(f"{info[0]} er hovedstaden i {land} og det er {info[1]} mill. innbyggere i {info[0]} ")

else:
    print("Beklager, landet finnes ikke i databasen")
    
#Oppgave 4 c:   Legger til et nytt land i dictionary 
nytt_land = input(" Skriv inn et nytt land (som ikke ble nevnt ovenfor): ")
ny_by = input(" Skriv inn hovedstaden i landet: ")
ny_innbyggere = float(input("Hva er innbyggertallet i hovedstaden:"))

data[nytt_land] = [ny_by, ny_innbyggere]

 
for land, info in data.items():
    print(f"{land:<14}{info[0]:<14}{info[1]:>7}")
