import numpy as np
 
antall_elever = int(input('Skriv antall elever: '))
antall_pizza = antall_elever*1/4   #Hver person får 1/4 pizza

print(f"Det må handles inn {np.ceil(antall_pizza):.0f} pizzaer til festen")
